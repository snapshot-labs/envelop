{
  "name": "envelop",
  "version": "0.1.0",
  "license": "MIT",
  "scripts": {
    "lint": "eslint src/ test/ scripts/ --ext .ts,.json",
    "lint:fix": "yarn lint --fix",
    "typecheck": "tsc --noEmit",
    "build": "tsc",
    "dev": "nodemon src/index.ts -e js,ts,hbs,json",
    "start": "node dist/src/index.js",
    "start:test": "dotenv -e test/.env.test yarn dev",
    "test": "PORT=3030 start-server-and-test 'yarn start:test' 3030 'dotenv -e test/.env.test jest --runInBand'",
    "test:unit": "dotenv -e test/.env.test jest test/unit/",
    "test:e2e": "PORT=3030 start-server-and-test 'yarn start:test' 3030 'dotenv -e test/.env.test jest --runInBand --collectCoverage=false test/e2e/'"
  },
  "eslintConfig": {
    "extends": "@snapshot-labs"
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "engines": {
    "node": ">=16.0.0 <17.0.0"
  },
  "prettier": "@snapshot-labs/prettier-config",
  "dependencies": {
    "@apollo/client": "^3.7.17",
    "@ethersproject/address": "^5.7.0",
    "@ethersproject/wallet": "^5.7.0",
    "@sendgrid/mail": "^7.7.0",
    "@snapshot-labs/snapshot-sentry": "^1.1.0",
    "bluebird": "^3.7.2",
    "bull": "^4.10.4",
    "connection-string": "^4.4.0",
    "cors": "^2.8.5",
    "cross-fetch": "^3.1.6",
    "dayjs": "^1.11.9",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-prom-bundle": "^6.6.0",
    "graphql": "^16.7.1",
    "handlebars": "^4.7.7",
    "juice": "^9.0.0",
    "lodash.chunk": "^4.2.0",
    "marked": "< 5",
    "morgan": "^1.10.0",
    "mysql": "^2.18.1",
    "prom-client": "^14.2.0",
    "remove-markdown": "^0.5.0",
    "ts-node": "^10.9.1"
  },
  "devDependencies": {
    "@commitlint/cli": "^17.6.7",
    "@commitlint/config-conventional": "^17.6.6",
    "@snapshot-labs/eslint-config": "^0.1.0-beta.9",
    "@snapshot-labs/prettier-config": "^0.1.0-beta.7",
    "@types/bluebird": "^3.5.38",
    "@types/bull": "^4.10.0",
    "@types/cors": "^2.8.13",
    "@types/express": "^4.17.17",
    "@types/jest": "^29.5.2",
    "@types/lodash.chunk": "^4.2.7",
    "@types/marked": "^4.3.0",
    "@types/morgan": "^1.9.4",
    "@types/mysql": "^2.15.21",
    "@types/node": "^20.4.5",
    "@types/remove-markdown": "^0.3.1",
    "@types/serve-favicon": "^2.5.4",
    "@types/supertest": "^2.0.12",
    "dotenv-cli": "^7.2.1",
    "eslint": "^8.46.0",
    "eslint-plugin-prettier": "^5.0.0",
    "husky": "^8.0.3",
    "jest": "^29.5.0",
    "jest-environment-node-single-context": "^29.1.0",
    "nodemon": "^2.0.22",
    "prettier": "^3.0.1",
    "sass": "^1.64.1",
    "start-server-and-test": "^2.0.0",
    "supertest": "^6.3.3",
    "ts-jest": "^29.1.1",
    "typescript": "^5.1.6"
  }
}
