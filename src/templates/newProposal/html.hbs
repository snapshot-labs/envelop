{{#> layout.html}}
  <table role="presentation" width="100%">
    <tbody>
      <tr>
        <td class="introduction">A new proposal has been submitted on {{proposal.space.name}}</td>
      </tr>
      <tr>
        <td>
          <table role="presentation" width="100%">
            <tr class="content-body-preheading">
              <td class="proposal-space-logo"><img alt="{{proposal.space.name}}" src="https://cdn.stamp.fyi/space/{{proposal.space.id}}?s=32" class="proposal-space-avatar" /></td>
              <td><a href="https://snapshot.box/#/s:{{proposal.space.id}}">{{proposal.space.name}}</a></td>
              <td style="text-align: right"><span class="state-badge state-{{proposal.state}}">{{proposal.state}}</span></td>
            </tr>
          </table>
        </td>
      </tr>
      <tr>
        <td class="content-body-heading" >
          <h1 class="long-title"><a class="proposal-title" href="{{{proposal.link}}}">{{proposal.title}}</a></h1>
        </td>
      </tr>
      <tr>
        <td class="block">
          <table>
            <tr><td style="padding: 0 1em 0 0;"><b>Author</b></td><td><a href="https://snapshot.box/#/profile/{{proposal.author}}">{{proposal.author}}</a></td></tr>
            <tr><td><b>Voting start</b></td><td>{{formattedStartDate}}</td></tr>
            <tr><td><b>Voting end</b></td><td>{{formattedEndDate}}</td></tr>
          </table>
        </td>
      </tr>
      <tr>
        <td class="proposal-fullbody">
          {{{proposalHtmlBody}}}
        </td>
      </tr>
      <tr>
        <td>
          <h2 style="margin-bottom: 1em;">Cast your votes</h2>
        </td>
      </tr>
      <tr>
        <td>
          <table class="proposal-choices">
            {{#each proposal.choices}}
              <tr>
                <td class="proposal-choices-item pending-result">
                  <table>
                    <tr>
                      <td style="padding-right: 1em;">
                        <a href="{{{../proposal.link}}}"><div class="vote-btn"></div></a>
                      </td>
                      <td>
                        <a href="{{{../proposal.link}}}">{{this}}</a>
                      </td>
                    </tr>
                  </table>
                </td>
              </tr>
            {{/each}}
          </table>
        </td>
      </tr>
      <tr>
        <td style="padding-top: .5em; padding-bottom: 1em">
          Voting closes on {{formattedEndDate}}
        </td>
      </tr>
    </tbody>
  </table>
{{/layout.html}}
